doctype html
html
  head
    meta(charset='utf-8')
    title Taxi Driver Maker
    link(rel="stylesheet" type="text/css" href="/stylesheets/main.css")
  body
    div(id='container')

      label(for='name' class='col-lg-2 control-label')
        a(href='/users') Users
        =" | "
        a Makers

      <img src="/images/maker.jpg" width=100% height=100%>

      h2(id='description')
        span='펀딩 모금액 : ' + fund_balance
        font(color='gray')  ETH

      h2(id='description')
        span='제작자 보유 이더 : ' + maker_balance
        font(color='gray')  ETH

      button(id='button' onClick="location.href='/makers/withdraw'") 코인 인출하기
      button(id='button' onClick="location.href='/makers/movie'") 동영상 업로드

    div(id='comment')
      li 펀딩 계정 :
        ul=fund + ' : ' + fund_balance + ' (ETH), ' + fund_tamount + ' (TDs)'
      li 제작자 계정 :
        ul=maker + ' : ' + maker_balance + ' (ETH), ' + maker_tamount + ' (TDs)'